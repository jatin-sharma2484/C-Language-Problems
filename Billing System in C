printf("Coca Cola (Rs 50) : ");
scanf("%d",&coke);
printf("Sprite (Rs 50) : ");
scanf("%d",&sprite);
printf("Dew (Rs 50) : ");
scanf("%d",&dew);
printf("Mojito (Rs 70) : ");
scanf("%d",&mojito);
