total_Lays = 30*lays;
total_sandwich = 60*sandwich;
total_momos = 80*momos;

int total_coke = 50*coke;
int total_sprite = 50*sprite;
int total_dew = 50*dew;
int total_mojito = 70*mojito;

int total_apples = 80*apples;
int total_bananas = 70*bananas;
int total_mangoes = 90*mangoes;

int total_bat = 200*bat;
int total_football = 350*football;
int total_ball = 60*ball;

printf("Things                                       Quantity                                 Total\n");
printf("Burger                                          %d                                      %d\n",burger,total_Burger);
printf("Lays                                            %d                                      %d\n",lays,total_Lays);
printf("Sandwich                                        %d                                      %d\n",sandwich,total_sandwich);
printf("Ready to eat momos                              %d                                      %d\n",momos,total_momos);
printf("Cola Cola                                       %d                                      %d\n",coke,total_coke);
